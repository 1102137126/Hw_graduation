	<!-- 開場畫面 >
	<preference name="AutoHideSplashScreen" value="true" />
	<preference name="splashscreen", "splash" />
	<preference name="SplashScreenDelay" value="3000" /-->
	
	<access origin="*" subdomains="true" />
	
	
	<!-- icon -->
	<icon src="images/logo.png" />
</widget>