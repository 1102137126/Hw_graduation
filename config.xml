<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
		xmlns:gap   = "http://phonegap.com/ns/1.0"
		id	    = "tw.moke.testing"
		versionCode = "10" 
		version     = "1.1.1" >
 
	<name>行動比價系統</name>
	
	<description>
		幫助想省錢的人，在購買食品、或滿足想吃零食慾望的同時，
		將金錢做到最划算的組合
	</description>
	
	<!-- QRcode Scanner -->
	<gap:plugin name="cordova-plugin-barcodescanner" source="npm" />
	<gap:plugin name="cordova-plugin-geolocation" source="npm" />
	<!--gap:plugin name="org.madmobile.cordovaplugins.zbarscanner" source="npm" />
	 <gap:plugin name="org.apache.cordova.splashscreen" /-->
	<!-- 開場畫面 >
	<gap:plugin name="cordova-plugin-splashscreen" source="npm" /-->
	
	<author href="http://fs.mis.kuas.edu.tw/~s1102137126/2016_app/" email="1102137126@kuas.edu.tw">
		kuas mis 畢業專題小組
	</author>
	
	<!-- current version of PhoneGap -->
	<preference name="phonegap-version" value="3.7.0" />
	<!-- 設定畫面固定為水平(landscape)、垂直(portrait) -->
	<preference name="orientation" value="default" />
